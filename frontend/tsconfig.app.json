{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "rootDir": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "noEmit": false,
        "outDir": "./dist"
    },
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ]
}
