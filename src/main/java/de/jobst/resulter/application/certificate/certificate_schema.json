{
    "$schema" : "http://json-schema.org/draft-07/schema#",
    "type" : "object",
    "title" : "TextParagraphSchema",
    "description" : "Schema for text paragraph properties",
    "properties" : {
        "paragraphs" : {
            "type" : "array",
            "items" : {
                "type" : "object",
                "properties" : {
                    "marginTop" : {
                        "type" : "integer",
                        "description" : "Spacing before the paragraph"
                    },
                    "fontSize" : {
                        "type" : "integer",
                        "description" : "Font size of the text"
                    },
                    "bold" : {
                        "type" : "boolean",
                        "description" : "Whether the text is bold"
                    },
                    "text" : {
                        "type" : "string",
                        "description" : "The text content"
                    }
                },
                "required" : [
                    "marginTop",
                    "fontSize",
                    "bold",
                    "text"
                ]
            }
        }
    },
    "required" : [
        "paragraphs"
    ]
}
